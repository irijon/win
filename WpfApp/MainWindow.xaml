<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem x:Name="Client" Header="Клиенты" Click="Client_OnClick"></MenuItem>
            <MenuItem x:Name="Payment" Header="Покупки" Click="Payment_OnClick"></MenuItem>
            <MenuItem x:Name="Service" Header="Услуги" Click="Service_OnClick"></MenuItem>
        </Menu>
    </Grid>
</Window>
